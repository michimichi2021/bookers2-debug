<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>

      <!-- current_userと@userが一致していない場合に`Begin Chat`を表示 -->
      
      <% if current_user != @user %>
        <% if (current_user.following? @user) && (@user.following? current_user)  %>
          <%= link_to 'Chatを始める', message_path(@user.id) %>
        <% end %>  
      <% end %> 



      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user) do %>
              <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
            <td><%= book.body %></td>

            <% if current_user!=@user %>


             <td>
               <div id="favorites_buttons_<%= book.id %>" >
                 <%= render 'favorites/favorite-btn', book: book %>
                </div>
             </td>

             <% end %>
            <td>
            <p>コメント数：<%= book.book_comments.count %></p>
            </td>
            
            <td>
              <div id="star-rate-<%= book.id %>"></div>
              <script>
                // 繰り返し処理でもidをidを一意にできるようにnote_idを入れる
              $('#star-rate-<%= book.id %>').raty({
                size: 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half: true,
                // 読み込みだけで入力できない
                readOnly: true,
                score: <%= book.rate %>,
              });
              </script>
            </td>


          </tr>
        <% end %>
      </tbody>
    </table>

    <h3>投稿数の前日比・前週比</h3>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>今日の投稿</th>
          <th>前日の投稿</th>
          <th>前日比</th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <td><%=  @today_book.count %></td>
            <td><%=  @yesterday_book.count %></td>
            <% if @yesterday_book.count == 0 %>
           <td>前日の投稿はなし</td>
           <% else %>
             　<td><% @the_day_before =   @today_book.count / @yesterday_book.count.to_f  %>
             　<%= (@the_day_before * 100).round %>%</td>
           <% end %>
          </tr>
      </tbody>
    </table>
    
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>今週の投稿</th>
          <th>前週の投稿</th>
          <th>前週比</th>
        </tr>
      </thead>
      <tbody>
          <tr>
           
            <td><%=  @this_week_book.count %></td>
            <td><%=  @last_week_book.count %></td>
            <% if @last_week_book.count == 0 %>
             <td>先週の投稿はなし</td>
             <% else %>
               　<td><% @the_week_before =   @this_week_book.count / @last_week_book.count.to_f  %>
               　<%= (@the_week_before * 100).round %>%</td>
            <% end %>
          </tr>
      </tbody>
    </table>
    
    
    
    
    
    </div>
  </div>
</div>