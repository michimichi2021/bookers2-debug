<% if book.favorited_by?(current_user) %>
    <%= link_to book_favorites_path(book.id), method: :delete, class: "favorite_btn",remote: true do %>
      ♥<%= book.favorites.count %>
    <% end %>
<% else %>
    <%= link_to book_favorites_path(book.id), method: :post, class: "favorite_btn",remote: true do %>
       ♡<%= book.favorites.count %>
    <% end %>
<% end %>


